<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>

<div class="container">
    <div class="row mt-3">
        <div class="col-md-6 offset-md3">
            <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= event.title %></h5>
                  <p class="card-text"><%= event.description %></p>
                  <p><%= event.location %></p>
                  <p>
                    <span class="badge badge-secondary text-black"><%= event.date.toDateString() %></span>
                  </p>
                  <a href="<%= '/events/edit/'+event.id %>" class="btn btn-primary">Edit</a>
                  <button class="btn btn-danger" onclick="deleteEvent()" id="deleteBtn" data-id="<%= event.id %>">Delete</button>
                  
                </div>
              </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') -%>